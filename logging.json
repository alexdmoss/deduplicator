{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
      "logstash_formatter": {
        "()": "pythonjsonlogger.jsonlogger.JsonFormatter",
        "format": "%(levelname) %(message)s",
        "timestamp": true,
        "rename_fields": {
          "levelname": "severity",
          "msg": "message"
        }
      }
    },
    "handlers": {
      "json": {
        "formatter": "logstash_formatter",
        "class": "logging.StreamHandler",
        "stream": "ext://sys.stdout"
      }
    },
    "loggers": {
      "application": {
        "handlers": [
          "json"
        ],
        "level": "INFO",
        "propagate": true
      },
      "root": {
        "level": "INFO",
        "propagate": true,
        "handlers": [
          "json"
        ]
      }
    }
  }
  